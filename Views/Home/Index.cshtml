@{
    ViewData["Title"] = "Home Page";
}

<style>
    body {
        background-image: url('https://img.freepik.com/foto-gratis/retrato-abstracto-ojo-elegancia-mujeres-jovenes-generado-ai_188544-9712.jpg'); /* Reemplaza con la ruta de tu imagen */
        background-size: cover;
        background-position: center;
        background-attachment: fixed;
        color: white;
    }

    .overlay {
