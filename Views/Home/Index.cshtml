        padding: 100px 0;
    }

    .main-heading {
        font-size: 4rem;
        font-weight: 700;
    }

    .subtext {
        font-size: 1.5rem;
        color: #dcdcdc;
    }

    .btn-custom {
        background-color: #ff6f61;
        border: none;
        padding: 15px 30px;
        font-size: 1.2rem;
